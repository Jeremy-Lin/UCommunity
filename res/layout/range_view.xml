<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stageprogress"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:id="@+id/img_rang_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rang_line" />

    <LinearLayout
        android:id="@+id/rlt_range_nodes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_range_1"
                style="@style/RangeNode" />

            <TextView
                android:id="@+id/txt_range_node_1"
                style="@style/RangeNodeDes"
                android:text="500m" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_range_2"
                style="@style/RangeNode" />

            <TextView
                android:id="@+id/txt_range_node_2"
                style="@style/RangeNodeDes"
                android:text="1km" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_range_3"
                style="@style/RangeNode" />

            <TextView
                android:id="@+id/txt_range_node_3"
                style="@style/RangeNodeDes"
                android:text="2km" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_range_4"
                style="@style/RangeNode" />

            <TextView
                android:id="@+id/txt_range_node_4"
                style="@style/RangeNodeDes"
                android:text="3km" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_range_5"
                style="@style/RangeNode" />

            <TextView
                android:id="@+id/txt_range_node_5"
                style="@style/RangeNodeDes"
                android:text="全城" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>